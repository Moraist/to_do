<%- include('./template/header') %> 


<section class="container">
    
    <div class="header">
        <h1>TO DO</h1>
        
        <form action="/search" method="get">
            <input type="date" name="dateinit" value="<%= todayDate %>" onchange="this.form.submit()">
        </form>
    </div>
    
    <div class="show-list">
        
        <ul class="list-group list-group-flush">
        <!-- RENDER TASKS FROM DB -->
        <% list.forEach(el => { %>
            
            <li class="list-group-item d-flex justify-content-between">
                <a href="/update/ <%= el._id %>">
                    <i class="fa fa-edit"></i>
                </a>
                <%= el.task %>
                <a href="/delete/ <%= el._id %>">
                    <i class="fa fa-trash-o"></i>
                </a>
            </li>
            

        <% }); %>
        </ul>


    </div>
    
    <form action="/" method="post" class="input-form">
        <input type="text" name="newTask" autofocus>
        <input type="date" name="date" id="date" value="<%= todayDate %>">
        <input type="submit" value="Criar">
    </form>

</section>


<%- include('./template/footer') %> 